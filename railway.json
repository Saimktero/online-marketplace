{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311", "pip"]
        },
        "install": {
          "cmds": ["pip install -r requirements.txt"]
        },
        "start": {
          "cmds": ["gunicorn config.wsgi:application"]
        }
      }
    }
  }
}